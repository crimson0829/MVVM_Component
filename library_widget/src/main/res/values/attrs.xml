<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingProgressView">
        <attr name="lpv_progressIndeterminate" format="boolean" />
        <attr name="lpv_barColor" format="color" />
        <attr name="lpv_rimColor" format="color" />
        <attr name="lpv_rimWidth" format="dimension" />
        <attr name="lpv_spinSpeed" format="float" />
        <attr name="lpv_barSpinCycleTime" format="integer" />
        <attr name="lpv_circleRadius" format="dimension" />
        <attr name="lpv_fillRadius" format="boolean" />
        <attr name="lpv_barWidth" format="dimension" />
        <attr name="lpv_linearProgress" format="boolean" />
    </declare-styleable>


    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border" format="boolean" />
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_background_color" format="color" />
        <attr name="civ_shadow" format="boolean" />
        <attr name="civ_shadow_color" format="color" />
        <attr name="civ_shadow_radius" format="float" />
        <attr name="civ_shadow_gravity">
            <flag name="center" value="1" />
            <flag name="top" value="2" />
            <flag name="bottom" value="3" />
            <flag name="start" value="4" />
            <flag name="end" value="5" />
        </attr>
    </declare-styleable>




</resources>